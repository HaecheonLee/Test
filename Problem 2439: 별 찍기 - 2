#include <iostream>
#include <iomanip>

int main(){
    int n;
    
    std::cin>>n;
    
    if(n>=1&&n<=100){
        for(int i = 1; i<=n; i++){
            std::cout<<std::setw(n-i+1);
            for(int j = 0; j<i; j++){
                std::cout<<"*";
            }
            
            std::cout<<std::endl;
        }
    }
}